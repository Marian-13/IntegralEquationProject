@model SocialNetwork.Domain.DataTransferObjects.UserModel
<link href="~/Content/UserProfile.css" rel="stylesheet" />

<div class="container img-profile">
    <div class="row panel panel-default img-profile-foto-row">
        <div class="col-md-4 img-profile-fotos">
            <img src="http://wallpapers-3d.ru/sstorage/53/2011/03/image_531903111627207792992.jpg" />
            <div class="fader"><button class="btn btn-default fotoChangeButton"><span class="glyphicon glyphicon-camera"></span></button></div>
        </div>
        <div class="col-md-4 img-profile-fotos">
            <img src="~/Images/profile_placeholder.gif" style="border: 5px solid #9E9E9E" class="img-circle"/>
            <h3 class="userName">@(@Model.FirstName + ' ' + @Model.LastName)</h3>
            <div class="fader"><button class="btn btn-default fotoChangeButton"><span class="glyphicon glyphicon-camera"></span></button></div>
        </div>
        <div class="col-md-4 img-profile-fotos">
            <img src="http://wallpapers-3d.ru/sstorage/53/2011/08/10708111152415828.jpg">
            <div class="fader">
                <button class="btn btn-default fotoChangeButton"><span class="glyphicon glyphicon-camera"></span></button>
            </div>
        </div>
    </div>
</div>
<div class="row img-profile-info">
    <div class="col-md-offset-3 col-md-6">
        <div class="panel-default panel">
            <h3 style="text-align: center">About you <span class="pull-right glyphicon glyphicon-edit" data-toggle="modal" data-target="#editUserModal"></span></h3>
            <hr />
            <p>Name: @Model.FirstName</p>
            <p>Surname: @Model.LastName</p>
            <p>Login: @Model.Login</p>
            <p>E-mail: @Model.Email</p>
        </div>
    </div>

    <div class="modal fade" id="editUserModal" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit info</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-4">Name</div>
                        <input type="text" class="form-control" id="FirstName" value="@Model.FirstName">
                    </div>
                    <div class="row">
                        <div class="col-lg-4">Surname</div>
                        <input type="text" class="form-control" id="LastName" value="@Model.LastName">
                    </div>
                    <div class="row">
                        <div class="col-lg-4">Email</div>
                        <input type="text" class="form-control" id="Email" value="@Model.Email">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

